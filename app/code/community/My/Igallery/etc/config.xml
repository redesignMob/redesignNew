<config>
    <modules>
        <My_Igallery>
            <version>1.0.0</version>
        </My_Igallery>
    </modules>
    <frontend>
        <routers>
            <igallery>
                <use>standard</use>
                <args>
                    <module>My_Igallery</module>
                    <frontName>igallery</frontName>
                </args>
            </igallery>
        </routers>
        <layout>
            <updates>
                <igallery>
                    <file>my_igallery.xml</file>
                </igallery>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <igallery>
                <use>admin</use>
                <args>
                    <module>My_Igallery</module>
                    <frontName>igallery</frontName>
                </args>
            </igallery>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <igallery>
                            <title>I-Gallery</title>
                            <sort_order>50</sort_order>
                            <children>
                                <index>
                                    <title>Manage I-Gallery</title>
                                    <sort_order>0</sort_order>
                                </index>
                                <new>
                                    <title>Add I-Gallery</title>
                                    <sort_order>1</sort_order>
                                </new>
                            </children>
                        </igallery>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <igallery>
                                            <title>I-Gallery Section</title>
                                        </igallery>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <menu>
            <igallery module="igallery">
                <title>I-Gallery</title>
                <sort_order>50</sort_order>
                <children>
                    <add module="igallery">
                        <title>Add I-Gallery</title>
                        <sort_order>0</sort_order>
                        <action>igallery/adminhtml_banner/add</action>
                    </add>
                    <index module="igallery">
                        <title>Manage I-Gallery</title>
                        <sort_order>1</sort_order>
                        <action>igallery/adminhtml_banner/index</action>
                    </index>
                </children>
            </igallery>
        </menu>
    </adminhtml>
    <global>
        <blocks>
            <igallery>
                <class>My_Igallery_Block</class>
            </igallery>
        </blocks>
        <models>
            <igallery>
                <class>My_Igallery_Model</class>
                <resourceModel>igallery_mysql4</resourceModel>
            </igallery>
            <igallery_mysql4>
                <class>My_Igallery_Model_Mysql4</class>
                <entities>
                    <banner>
                        <table>my_igallery_banner</table>
                    </banner>
                    <banner_image>
                        <table>my_igallery_banner_image</table>
                    </banner_image>
                    <banner_category>
                        <table>my_igallery_banner_category</table>
                    </banner_category>
                    <banner_page>
                        <table>my_igallery_banner_page</table>
                    </banner_page>
                    <banner_store>
                        <table>my_igallery_banner_store</table>
                    </banner_store>
                </entities>
            </igallery_mysql4>
        </models>
        <helpers>
            <igallery>
                <class>My_Igallery_Helper</class>
            </igallery>
        </helpers>
		<events>
			<controller_action_layout_generate_blocks_after>
				<observers>
					<igallery_layout_generate_observer>
						<type>singleton</type>
						<class>igallery/layout_generate_observer</class>
						<method>addJqueryLibrary</method>
					</igallery_layout_generate_observer>
				</observers>
			</controller_action_layout_generate_blocks_after>
		</events>
        <resources>
            <igallery_setup>
                <setup>
                    <module>My_Igallery</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </igallery_setup>
            <igallery_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </igallery_write>
            <igallery_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </igallery_read>
        </resources>
    </global>
    <default>
        <igallery>
            <general>
                <enable_jquery>1</enable_jquery>
            </general>
        </igallery>
    </default>
</config>